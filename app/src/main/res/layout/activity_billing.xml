<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="exodiasolutions.epos.Billing">

    <exodiasolutions.epos.CustomViews.TV_normaltext
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Bill"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:fresco="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="#4052b5"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="3dp"
        android:descendantFocusability="blocksDescendants"
        android:layout_margin="2dp"
        >
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <exodiasolutions.epos.CustomViews.TV_normaltext
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S.No."
                    android:textColor="#ccc"
                    android:layout_gravity="center_horizontal"
                    />


            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <exodiasolutions.epos.CustomViews.TV_normaltext
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item"
                    android:textColor="#ccc"
                    android:layout_gravity="center_horizontal"
                    />


            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000"
                /><LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <exodiasolutions.epos.CustomViews.TV_normaltext
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="#ccc"
                android:layout_gravity="center_horizontal"
                />


        </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000"
                /><LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <exodiasolutions.epos.CustomViews.TV_normaltext
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#ccc"
                android:layout_gravity="center_horizontal"
                />


        </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ListView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:id="@+id/item_listview"
        android:layout_height="0dp"/>

    <exodiasolutions.epos.CustomViews.TV_Muskan
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total = 220"
        android:id="@+id/total_tv"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:textColor="#222"
        android:textSize="20sp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <Button

        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:onClick="add_item"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:text="Done!"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>



</LinearLayout>
